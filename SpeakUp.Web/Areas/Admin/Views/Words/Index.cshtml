@using SpeakUp.Utilities;
@model PagedResult<SpeakUp.ViewModels.WordViewModel>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Front
			</th>
			<th>
				Back
			</th>
			<th>
				Level
			</th>
			<th>
				DateAdded
			</th>
			<th>
				LastReviewDate
			</th>
			<th>
				Description
			</th>
			<th>
				DeckId
			</th>
			<th>
				Deck
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Data)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Front)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Back)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Level)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateAdded)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastReviewDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DeckId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Deck)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
					<a asp-controller="Sentence" asp-action="Index" asp-route-deckId="@item.Id">Sentences</a>
					@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
				</td>
			</tr>
		}
	</tbody>
</table>

<cs-pager cs-paging-pagesize=(int)Model.PageSize
		  cs-paging-pagenumber=(int)Model.PageNumber
		  cs-paging-totalitems=(int)Model.TotalItems
		  cs-pagenumber-param="pageNumber"
		  asp-controller="Users"
		  asp-action="Index"
		  cs-pager-li-current-class="page-item active"
		  cs-pager-li-other-class="page-item"
		  cs-pager-li-non-active-class="page-item disabled"
		  cs-pager-link-current-class="page-link"
		  cs-pager-link-other-class="page-link">
</cs-pager>